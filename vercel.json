{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/dist"  
      }
    },
    {
      "src": "backend/public/index.php",
      "use": "@vercel/php"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/public/index.php" },
    { "src": "/(.*)", "dest": "frontend/dist/$1" }  
  ]
}
